<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MolkkyPistelaskuSovellus.MainPage">

    <StackLayout>
        <Label Text="Tervetuloa Mölkky-pistelaskusovellukseen!" HorizontalTextAlignment="Center" FontSize="20"/>

        <Entry x:Name="pelaajatEntry" Placeholder="Syötä pelaajien nimet (erottele pilkulla)" FontSize="16" />

        <Button x:Name="syotaPelaajatButton" Text="Syötä pelaajat" Clicked="OnSyotaPelaajatButtonClicked" FontSize="18" />

        <Entry x:Name="kaadetutKeilatEntry" Placeholder="Syötä kaadetut keilat (esim. '0-12')" IsVisible="False" FontSize="18" />

        <Button x:Name="heitaButton" Text="Lisää pisteet" Clicked="OnHeitaButtonClicked" IsVisible="False" FontSize="18" />

        <Label x:Name="pisteetLabel" FontSize="16" />

        <Label x:Name="vuoroLabel" FontSize="16" />

    </StackLayout>

</ContentPage>
